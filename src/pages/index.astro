<!-- index.html -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>flimcadet</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/logo.svg">
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400&display=swap" rel="stylesheet">
  <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      background: #000;
      color: #fff;
      font-family: 'JetBrains Mono', monospace;
      font-size: 18px;
      font-weight: 400;
      line-height: 1.6;
      min-height: 100vh;
      width: 100vw;
    }
    body {
      min-height: 100vh;
      min-width: 100vw;
      margin: 0;
      padding: 0;
      display: block;
    }
    .container {
      width: 100%;
      max-width: 540px;
      margin: 48px auto 0 auto;
      display: flex;
      flex-direction: column;
      gap: 18px;
      align-items: flex-start;
    }
    .header {
      margin-bottom: 8px;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }
    .logo {
      width: 2em;
      height: 2em;
      min-width: 36px;
      min-height: 36px;
      max-width: 2em;
      max-height: 2em;
      object-fit: contain;
      margin-bottom: 12px;
      display: block;
    }
    .header-title,
    .header-roles,
    .header-location,
    .contact,
    .contact a,
    ul,
    li,
    .arrow {
      font-size: 1em;
      font-weight: 400;
      color: #fff;
      letter-spacing: 0.01em;
      text-align: left;
    }
    .header-title {
      margin-bottom: 0;
    }
    .header-roles {
      margin-top: 4px;
      margin-bottom: 4px;
    }
    .header-location {
      margin-top: 0;
      margin-bottom: 20px;
    }
    .contact {
      margin-top: 0;
      margin-bottom: 0;
      text-align: left;
      width: 100%;
    }
    .contact > div {
      margin-bottom: 4px;
    }
    .contact > div:last-child {
      margin-bottom: 0;
    }
    .contact a {
      color: #fff;
      text-decoration: underline;
      transition: color 0.2s;
    }
    .contact a:hover {
      color: #fff;
    }
    ul {
      list-style: none;
      padding: 0;
      margin: 0;
      width: 100%;
      text-align: left;
    }
    li {
      margin-bottom: 6px;
      text-align: left;
    }
    .dropdown {
      cursor: pointer;
      user-select: none;
      display: flex;
      align-items: center;
      transition: background 0.2s;
      padding: 0px 0;
      text-align: left;
    }
    .dropdown:hover {
      background: #111;
    }
    .arrow {
      margin-right: 8px;
      transition: transform 0.2s;
      display: inline-block;
    }
    li.open .arrow {
      transform: rotate(90deg);
    }
    .dropdown-content {
      display: none;
      margin-left: 28px;
      margin-top: 0px;
      margin-bottom: 8px;
      color: #ccc;
      font-size: 0.97em;
      line-height: 1.5;
      max-width: 90%;
      text-align: left;
    }
    li.open .dropdown-content {
      display: block;
      animation: fadeIn 0.2s;
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to   { opacity: 1; }
    }
    .video-embed {
      width: 100%;
      max-width: 480px;
      margin: 18px 0 0 0;
    }
    .yt-embed {
      width: 100%;
      max-width: 480px;
      margin: 12px 0 0 0;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }
    .yt-embed iframe {
      width: 100%;
      height: 270px;
      max-width: 100%;
      border: none;
    }
    .yt-caption {
      margin-top: 6px;
      color: #aaa;
      font-size: 0.97em;
      font-style: italic;
    }
    .yt-stack {
      display: flex;
      flex-direction: column;
      gap: 12px;
      margin-top: 0px;
      margin-bottom: 0;
      width: 100%;
      max-width: 480px;
    }
    @media (max-width: 600px) {
      .container {
        max-width: 98vw;
        padding: 0 2vw;
      }
      .video-embed,
      .yt-embed,
      .yt-stack {
        max-width: 100vw;
      }
      .yt-embed iframe {
        height: 40vw;
        min-height: 180px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <header class="header">
      <img src="/logo.svg" alt="flimcadet logo" class="logo">
      <div class="header-title">Rashad Wajahat // flimcadet</div>
      <div class="header-roles">writer // filmmaker // av artist</div>
      <div class="header-location">Rotterdam NL</div>
      <div class="contact">
        <div>email <a href="mailto:rashad@flimcadet.com">rashad@flimcadet.com</a></div>
        <div>instagram <a href="https://instagram.com/flimcadet" target="_blank">@flimcadet</a></div>
      </div>
    </header>
    <ul>
      <li>
